<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="Jpamodel" transaction-type="RESOURCE_LOCAL">

        <mapping-file>model/FriendlistEntity.xml</mapping-file>
        <mapping-file>model/ImageEntity.xml</mapping-file>
        <mapping-file>model/PtpRecordEntity.xml</mapping-file>
        <mapping-file>model/RecordEntity.xml</mapping-file>
        <mapping-file>model/RelationshipEntity.xml</mapping-file>
        <mapping-file>model/UserEntity.xml</mapping-file>
        <class>model.FriendlistEntity</class>
        <class>model.ImageEntity</class>
        <class>model.PtpRecordEntity</class>
        <class>model.RecordEntity</class>
        <class>model.RelationshipEntity</class>
        <class>model.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/Project"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>

</persistence>